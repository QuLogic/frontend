{
  "name": "monorepo",
  "version": "0.0.0",
  "description": "A monorepo of tools",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "run-p build:*",
    "build:dts": "node cmd/dts",
    "build:rollup": "node cmd/rollup",
    "create": "node cmd/create",
    "publish": "run-s bootstrap build",
    "postpublish": "lerna publish from-package",
    "prepare": "run-s bootstrap",
    "test": "run-s test:*",
    "test:eslint": "node cmd/eslint",
    "test:jest": "node cmd/jest",
    "watch": "run-p 'test:* -- --watch'"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-prototype-builtins": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "timers": "fake"
  },
  "lint-staged": {
    "*": [
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {
    "@jsxtools/classes": "file:packages/utils/classes",
    "@jsxtools/debounce": "file:packages/utils/debounce",
    "@jsxtools/define-args": "file:packages/utils/define-args",
    "@jsxtools/get-form-data": "file:packages/dom/get-form-data",
    "@jsxtools/is-equal": "file:packages/utils/is-equal",
    "@jsxtools/is-type": "file:packages/utils/is-type",
    "@jsxtools/prevent-default": "file:packages/utils/prevent-default",
    "@jsxtools/react-hooks": "file:packages/react/react-hooks",
    "@jsxtools/uid": "file:packages/utils/uid",
    "@jsxtools/use-debounced-state-factory": "file:packages/hooks/use-debounced-state-factory",
    "@jsxtools/use-equal-state-factory": "file:packages/hooks/use-equal-state-factory",
    "@jsxtools/use-fetch-factory": "file:packages/hooks/use-fetch-factory",
    "@jsxtools/use-local-storage-factory": "file:packages/hooks/use-local-storage-factory",
    "@jsxtools/use-promise-factory": "file:packages/hooks/use-promise-factory",
    "@jsxtools/utils": "file:packages/utils/utils"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.19",
    "@types/node-fetch": "^2.5.2",
    "@types/react": "^16.9.6",
    "@types/react-dom": "^16.9.2",
    "@types/react-test-renderer": "^16.9.1",
    "@typescript-eslint/parser": "^2.4.0",
    "babel-jest": "^24.9.0",
    "chokidar": "^3.2.1",
    "codecov": "^3.6.1",
    "eslint": "^6.5.1",
    "eslint-plugin-jest": "^22.19.0",
    "gzip-size": "^5.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.17.0",
    "lint-staged": "^9.4.2",
    "miniglob": "^0.1.1",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-test-renderer": "^16.10.2",
    "rollup": "^1.24.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.1.2",
    "typescript": "^3.6.4"
  },
  "private": true
}
