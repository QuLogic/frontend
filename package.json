{
  "name": "monorepo",
  "description": "A monorepo of tools",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "run-s build:*",
    "build:dts": "lerna exec -- tsc --declaration --emitDeclarationOnly --outDir . src/index.ts",
    "build:js": "lerna exec -- rollup --silent --config \"$(pwd)/rollup.config.js\"",
    "postbuild:js": "npx lerna exec -- node \\$LERNA_ROOT_PATH/npm/update",
    "create": "node npm/create",
    "postinstall": "lerna bootstrap",
    "test": "run-p test:*",
    "test:lint": "eslint packages/*/*/src/{*,**/*}.ts --cache --ignore-path .gitignore --resolve-plugins-relative-to node_modules",
    "pretest:jest": "npm run build:js",
    "test:jest": "jest --coverage",
    "watch": "run-p \"build:* -- --watch\"",
    "watch:dts": "run-p build:dts -- --watch",
    "watch:js": "run-p build:js -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.2",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-jest": "^24.9.0",
    "codecov": "^3.5.0",
    "eslint": "^6.1.0",
    "eslint-plugin-jest": "^22.15.1",
    "gzip-size": "^5.1.1",
    "husky": "^3.0.3",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.1.1",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "plugins": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "timers": "fake"
  },
  "lint-staged": {
    "*": [
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "private": true
}
